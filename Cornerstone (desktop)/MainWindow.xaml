<Window x:Class="Cornerstone__desktop_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cornerstone__desktop_"
        mc:Ignorable="d"
        Title="Cornerstone" Height="550" Width="800" WindowStyle="None" Background="#FF121518" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7.5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="67.5"/>
            <ColumnDefinition Width="67.5"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="3" Background="LightGreen" />
        <Grid x:Name="TopBar" Grid.Row="1" Grid.ColumnSpan="3" MouseDown="TopBar_MouseDown" Background="#FF212731"
              Cursor="Hand">
            <Label
                Content="Cornerstone"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="17pt"
                FontFamily="Grapple BRK"
                Foreground="#FF5C87B0"
            />
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1">
            <Button x:Name="AppClose"
                Content="X"
                FontFamily="Grapple BRK"
                FontSize="20pt"
                Cursor="Hand"
                Background="#FF682525"
                Height="50"
                Foreground="White" Click="AppClose_Click" BorderBrush="{x:Null}"
            />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Button x:Name="AppMinimize"
                Content="-"
                FontFamily="Grapple BRK"
                FontSize="20pt"
                Cursor="Hand"
                Background="#FF204171"
                Height="50"
                Foreground="White" Click="AppMinimize_Click" BorderBrush="{x:Null}"
            />
        </Grid>
        <Grid Grid.Row="2" >
            <Canvas x:Name="ScriptureText"
                Background="#FF0C1717"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
            />
        </Grid>
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Background="#FF3C1515">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Book:"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#FF8B4B4B" />
            <ListBox x:Name="Books"
                Grid.Row="1"
                FontFamily="Segoe UI"
                FontSize="12pt"
                HorizontalAlignment="Stretch"
                Cursor="Hand"
                VerticalAlignment="Stretch"
                Background="#FF8B4B4B"
                Foreground="White" BorderBrush="{x:Null}" />
            <Label Content="Chapter:"
                Grid.Row="2"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#FF8B4B4B" />
            <ListBox x:Name="Chapters"
                Grid.Row="3"
                FontFamily="Segoe UI"
                FontSize="12pt"
                HorizontalAlignment="Stretch"
                Cursor="Hand"
                VerticalAlignment="Stretch"
                Background="#FF8B4B4B"
                Foreground="White" BorderBrush="{x:Null}" />
            <Label Content="Verses:"
                Grid.Row="4"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#FF8B4B4B" />
            <ListBox x:Name="Verses"
                Grid.Row="5"
                FontFamily="Segoe UI"
                Cursor="Hand"
                FontSize="12pt"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#FF8B4B4B"
                Foreground="White" BorderBrush="{x:Null}" />
            <TextBox x:Name="VerseNote"
                Grid.Row="6"
                FontFamily="Segoe UI"
                Cursor="IBeam"
                FontSize="12pt"
                Margin="10"
                Padding="5"
                Background="#FF200D0D"
                Foreground="White" BorderBrush="{x:Null}" />
            <Button x:Name="SaveVerseNote"
                Cursor="Hand"
                Grid.Row="7"
                FontFamily="Grapple BRK"
                FontSize="10pt"
                Content="Save Note"
                Background="#FF8B4B4B"
                Foreground="White"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" BorderBrush="{x:Null}" Click="SaveVerseNote_Click" />
        </Grid>
    </Grid>
</Window>
