<Window x:Class="Cornerstone__desktop_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cornerstone__desktop_"
        mc:Ignorable="d"
        Title="Cornerstone" Height="550" Width="800" WindowStyle="None" Background="#FF121518" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7.5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="78.3"/>
            <ColumnDefinition Width="78.3"/>
            <ColumnDefinition Width="78.3"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="StyleTopBar" MouseDown="StyleTopBar_MouseDown" Grid.ColumnSpan="4" Background="LightGreen" />
        <Grid x:Name="TopBar" Grid.Row="1" Grid.ColumnSpan="4" MouseDown="TopBar_MouseDown" Background="#FF212731"
              Cursor="Hand">
            <Label
                Content="Cornerstone"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="17pt"
                FontFamily="Grapple BRK"
                Foreground="#FF5C87B0"
            />
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1">
            <Button x:Name="AppMaximize"
                Content="🗖"
                Margin="10"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                Cursor="Hand"
                Background="DarkCyan"
                Foreground="White" Click="AppMaximize_Click" BorderBrush="{x:Null}"
            />
        </Grid>
        <Grid Grid.Column="3" Grid.Row="1">
            <Button x:Name="AppClose"
                Content="X"
                Margin="10"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                Cursor="Hand"
                Background="#FF682525"
                Foreground="White" Click="AppClose_Click" BorderBrush="{x:Null}"
            />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Button x:Name="AppMinimize"
                Content="-"
                Margin="10"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                Cursor="Hand"
                Background="#FF204171"
                Foreground="White" Click="AppMinimize_Click" BorderBrush="{x:Null}"
            />
        </Grid>
        <Grid Grid.Row="2" >
            <Canvas x:Name="ScriptureText"
                Background="#FF0C1717"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
            />
        </Grid>
        <Grid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" Background="#FF1A1E26">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Content="Book:"
                FontFamily="Grapple BRK"
                FontSize="17pt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#FF1F2E3A" Background="{x:Null}" />
            <ListView x:Name="Books"
                Grid.Row="1"
                Loaded="Books_Loaded"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                Cursor="Hand"
                Height="25"
                VerticalAlignment="Stretch"
                Background="#FF212731"
                Foreground="White" BorderBrush="{x:Null}">
                <!--<ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height" Value="180" />
                    </Style>
                </ListView.ItemContainerStyle>-->
            </ListView>
            <Label Content="Chapter:"
                Grid.Row="2"
                FontFamily="Grapple BRK"
                FontSize="17pt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#FF1F2E3A" Background="{x:Null}" />
            <ListBox x:Name="Chapters"
                Grid.Row="3"
                FontFamily="Grapple BRK"
                FontSize="12pt"
                Height="25"
                HorizontalAlignment="Stretch"
                Cursor="Hand"
                VerticalAlignment="Stretch"
                Background="#FF212731"
                Foreground="White" BorderBrush="{x:Null}" />
            <Label Content="Verses:"
                Grid.Row="4"
                FontFamily="Grapple BRK"
                FontSize="17pt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#FF1F2E3A" Background="{x:Null}" />
            <ListBox x:Name="Verses"
                Grid.Row="5"
                FontFamily="Grapple BRK"
                Cursor="Hand"
                FontSize="12pt"
                Height="25"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#FF212731"
                Foreground="White" BorderBrush="{x:Null}" />
            <TextBox x:Name="VerseNote"
                Grid.Row="6"
                FontFamily="Segoe UI"
                Cursor="IBeam"
                FontSize="12pt"
                Margin="10"
                Padding="5"
                Background="#FF0B121A"
                Foreground="White" BorderBrush="{x:Null}" />
            <Button x:Name="SaveVerseNote"
                Cursor="Hand"
                Grid.Row="7"
                FontFamily="Grapple BRK"
                FontSize="20pt"
                Content="Save Note"
                Background="LightGreen"
                Foreground="#FF1F2E3A"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" BorderBrush="{x:Null}" Click="SaveVerseNote_Click" />
        </Grid>
    </Grid>
</Window>
